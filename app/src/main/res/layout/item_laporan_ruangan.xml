<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_laporan_ruangan_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_laporan_ruangan_nama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Nama Detail Ruangan"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/item_laporan_ruangan_check"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_baseline_check_box_outline_blank_24"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_laporan_ruangan_laporkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporkan"
            app:backgroundTint="@android:color/holo_red_light"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>